


<div class="container p-4 h-100">
  <div class="row h-75 d-flex align-items-center">
    <div class="col-md-4 mx-auto">
      <div class="card bg-warning">
        <form action="/games/add" method="POST" class="card-body">

          {{! Title and save button }}
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="text-light mb-3 h4">Crea una nueva sugerencia</h1>
            <button class="btn btn-success btn-block">
              Save
            </button>
          </div>
          <label for="name">Escribe el título de la sugerencia:</label>
          <input
            type="text"
            name="name"
            class="form-control bg-dark text-light mb-3"
            placeholder="Title"
            autofocus
          />

          <label for="description">Escribe una descripción de la petición:</label>
          <textarea
            name="description"
            rows="2"
            class="form-control bg-dark text-light mb-3"
            placeholder="Description"
          ></textarea>
        </form>
      </div>
    </div>

  </div>
</div>
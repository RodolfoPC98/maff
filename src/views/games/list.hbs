<div class="container p-4">
  <div class="row">
    {{#each games}}
      <div class="col-md-3 p-2">
        <div class="card text-center bg-dark text-light h-100">
          <div class="card-body">
              <h3 class="card-title text-uppercase">
                {{name}}
              </h3>
            <p class="m-2">{{description}}</p>
            <p class="text-muted">
              {{timeago registration_date}}
            </p>
            <a class="btn btn-danger" href="/games/delete/{{id}}">
              Eliminar Sugerencia
            </a>
            <a class="btn btn-secondary" href="/games/edit/{{id}}">
              Editar
            </a>
          </div>
        </div>
      </div>
    {{else}}
      <div class="col-md-4 mx-auto">
        <div class="card card-body text-center bg-dark text-light">
          <p>No hay sugerencias de juegos guardados</p>
          <a href="/games/add" class="text-success">Â¡Crea una sugerencia!</a>
        </div>
      </div>
    {{/each}}
  </div>
</div>